section.feedback
	.progress-bar
	.container
		.feedback-content
			.feedback__header(data-aos="fade-up" data-aos-delay="600" data-aos-offset="1050")
				+titleGroup('Get connected', 'We <br class="visible-mobile">keep <br class="hide-mobile"> in <br class="visible-mobile">touch <br> (safely)')
			.feedback-color-block.p-128(data-aos="fade-up" data-aos-delay="700" data-aos-offset="1050")
				.feedback__img.color-block__img
					img.main-img(src="img/feedback/1.jpg", width="576" alt="img")
					img.blur-img(src="img/feedback/1.jpg", width="576" alt="img")
				.feedback-form-wrapper(data-aos="fade-up" data-aos-delay="800" data-aos-offset="1050")
					form.contact-form#contact-form(action="#" method="POST" autocomplete="off")
						.form-item(data-aos="fade-up" data-aos-delay="900" data-aos-offset="1050")
							label Your email
							input(type="text" name="email" placeholder="Your e-mail")
						.form-item(data-aos="fade-up" data-aos-delay="1000" data-aos-offset="1050")
							label Your message
							p.textarea(role="textbox" contenteditable)
						.form-btn(data-aos="fade-up" data-aos-delay="1100" data-aos-offset="1050")
							button(type="submit").button-white
