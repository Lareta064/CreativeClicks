mixin headerBlog(title1, src, btn)
	// header-top
	.header-top
		a(href="index.html").logo
			img(src="img/logo/logo.png", width="92" alt="logo")
		.menu-toggle
			span
	//header-menu
	.header-navigation
		.header-menu.header-menu--purple
			.header-menu__list
				.header-menu__list-head
					a(href="index.html").logo.logo--mobile
						img(src="img/logo/logo.png", width="92" alt="logo")
					button.close-mobile-menu
						+icon-close
				ul
					li
						a(href="index.html") Home
					li
						a(href="whatWeDo.html") What we do
					li
						a(href="whoWeAre.html") Who we are
					li
						a(href="careers.html") Careers
					li.active
						a(href="resources.html") Resources
					li
						a(href="signIn.html") Sign in
	.hidden-layout
	header.header.header--detail
		.container.container--p0
			.header-content
				.title-group.text-center
					.title-2
						h2 
							a(href="resources.html") Blog
					.title-1
						h1 !{title1}
						
				.header-image
					img(src="img/blog/"+ src+".jpg" width="384", alt="img")
					.blure-block
						img(src="img/blog/"+ src+".jpg" width="384", alt="img")
					if btn
						.button-white.button-playVideo play video
							i
								svg(width="11" height="14" viewBox="0 0 11 14" fill="none" xmlns="http://www.w3.org/2000/svg")
									path(d="M0 0V14L11 7L0 0Z" fill="black")