
mixin infocard3(spanText, addText1, addText2, imgSrc,t1, t2, t3, t4)
	.info-card2.info-card--bg
		.info-card__img(data-aos="fade-up"  data-aos-delay=""+ t1)
			img.main-img(src="img/guides/"+imgSrc +".jpg", width="384" alt="img")
		.info-card__body
			.info-card__title(data-aos="fade-up"  data-aos-delay=""+ t2)
				h3 !{spanText}
			.additional-info(data-aos="fade-up"  data-aos-delay=""+ t3)
				p #{addText1}
				p #{addText2}
		.info-card__footer(data-aos="fade-up"  data-aos-delay=""+ t4)
			a(href="#!").button-white.button-video
				span Play video
				span
					svg(width="11" height="14" viewBox="0 0 11 14" fill="none" xmlns="http://www.w3.org/2000/svg")
						path(d="M0 0V14L11 7L0 0Z" fill="black")
section.section--black.videos-block
	.progress-bar.progress-bar--left
	.container.container--p0
		.section-content
			.title-group
				.title-3(data-aos="fade-up"  data-aos-delay="350")
					h3 We#[br]  captured #[br] it
			.infocard-block.infocard-block--right.infocard-block--reverse.infocard-block--yellow(data-aos="fade-up"  data-aos-delay="400")
				.infocard-block__content
					.infocard-block__row
						+infocard3('Blog Item<br> Title with 3&nbsp;lines', 'Today', '7 min. read', 1, 450, 500,550,600)
						+infocard3('Blog Item <br>Title with 3&nbsp;lines' , '1 Day ago', '6 min. read', 1, 450, 500,550,600)
						+infocard3( 'Blog Item <br>Title with 3&nbsp;lines' , '2 Days ago', '5 min. read', 1, 450, 500,550,600)
					
					.infocard-block__row
						+infocard3('Blog Item<br> Title with 3&nbsp;lines', 'Today', '7 min. read', 1, 450, 500,550,600)
						+infocard3('Blog Item <br>Title with 3&nbsp;lines' , '1 Day ago', '6 min. read', 1, 450, 500,550,600)
						+infocard3( 'Blog Item <br>Title with 3&nbsp;lines' , '2 Days ago', '5 min. read', 1, 450, 500,550,600)
				.btn-wrap(data-aos="fade-up"  data-aos-delay="650")
					a(href="videos-2.html").button-white.black-button show more
