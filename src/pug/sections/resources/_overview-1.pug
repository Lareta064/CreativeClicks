mixin infocard3(spanText, addText1, addText2, imgSrc)
	.info-card2.info-card--bg
		.info-card__img
			img.main-img(src="img/resources/"+imgSrc +".jpg", width="256" alt="img")
			img.blur-img(src="img/resources/"+imgSrc +".jpg", width="256" alt="img")
		.info-card__body
			.info-card__title
				h3 !{spanText}
			.additional-info
				p #{addText1}
				p #{addText2}
		.info-card__footer
			a(href="#!").button-white
				span Learn more
				span
					+sliderArrowRight

mixin infocard4(spanText, addText1, addText2, imgSrc)
	.info-card2.info-card--bg
		.info-card__img
			img.main-img(src="img/resources/"+imgSrc +".jpg", width="256" alt="img")
			img.blur-img(src="img/resources/"+imgSrc +".jpg", width="256" alt="img")
		.info-card__body
			.info-card__title
				h3 !{spanText}
			.additional-info
				p #{addText1}
				p #{addText2}
		.info-card__footer
			a(href="#!").button-white.button-video
				span Play video
				span
					svg(width="11" height="14" viewBox="0 0 11 14" fill="none" xmlns="http://www.w3.org/2000/svg")
						path(d="M0 0V14L11 7L0 0Z" fill="black")
section.section--black.top-block
	.progress-bar.progress-bar--right
	.container.container--p0
		.section-content
			.section-title
				h3 3 results:
			.infocard-block.infocard-block--right.infocard-block--reverse.infocard-block--purple
				.infocard-block__content
					// =====  cards row =====
					.infocard-block__row
						+infocard3('Certainty&nbsp;in our Uncertainty: Six Trends for&nbsp;the&nbsp;2020 Holiday Season and Beyond', 'Today', '7 min. read', 4)
						+infocard3('Blog Item<br> holiday<br> 3 lines', '1 Day ago', '6 min. read', 8)
				.btn-wrap
					a(href="overview-2.html").button-white.light-button show all (12)
			
section.section--black.top-block
	.progress-bar.progress-bar--left
	.container.container--p0
		.section-content
			.infocard-block.infocard-block--yellow
				.infocard-block__content
					// =====  cards row =====
					.infocard-block__row
						+infocard4('Blog Item<br> holiday<br> 3 lines', 'Today', '7 min. read', 8)
					
				.btn-wrap
					a(href="overview-2.html").button-white.black-button show all (12)