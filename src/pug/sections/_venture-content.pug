section.section--black.p-470
	.progress-bar.progress-bar--right
	.container.container--p0
		.color-block-wrapper
			.color-block--right.bg-green
				.color-block__img
					img.main-img(src="img/venture/2.jpg", width="576" alt="img")
					img.blur-img(src="img/venture/2.jpg", width="576" alt="img")
				.color-block.p-128
					.text-block
						.head-3
							h3 OUR process
					.form-wrapper
						// if the required input field have been filled incorrectly we should add class 'error-value' to the parent div of that field ('.form-item' class)

						form(action="").contact-form
							.form-item
								label.form-item__title Full Name
								input(type="text" name="firstName" placeholder="Your first name")
							.form-item.form-item--sibl
								input(type="text" name="lastName" placeholder="Last name")
							.form-item
								label.form-item__title Email address
								input(type="text" name="email" placeholder="Your email address")
								// notify if input value novalid
								label.error This is not valid email address
								// error message of the each input field should be added after this input field, using <label> tag with class '.error' 
								// (ex.: <label class="error">This is not valid email address</label>)
							.form-item
								label.form-item__title phone number
								input(type="text" name="phone" placeholder="Your phone number")
								// notify if input value novalid
								label.error This is not valid phone number
								// error message of the each input field should be added after this input field, using <label> tag with class '.error' 
								// (ex.: <label class="error">This is not valid email address</label>)
							.form-item
								label.form-item__title company
								input(type="text" name="company" placeholder="Company name")
							.form-white-footer
								.form-white-footer__content
									.form-btn
										button(type="submit").button-white
