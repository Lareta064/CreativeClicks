section.feedback.feedback--reverse
	.progress-bar.progress-bar--right
	.container.container--p0
		.feedback-content
			.feedback__header
				+titleGroup('Subscribe to be up-to-date', 'ENjoy <br> THe content?')
			.feedback-color-block.p-128(data-aos="fade-up"  data-aos-delay="400")
				.feedback__img.color-block__img(data-aos="fade-up"  data-aos-delay="500")
					img.main-img(src="img/feedback/1.jpg", width="576" alt="img")
				.feedback-form-wrapper(data-aos="fade-up"  data-aos-delay="450")
					form.contact-form#contact-form(action="#" method="POST" autocomplete="off")
						.form-item(data-aos="fade-up"  data-aos-delay="550")
							input(type="text" name="email" placeholder="Your e-mail")
						.form-item(data-aos="fade-up"  data-aos-delay="600")
							label Your message
							p.textarea(role="textbox" contenteditable)
						.form-btn(data-aos="fade-up"  data-aos-delay="650")
							button(type="submit").button-white
								span Subscribe
								span 
									+sliderArrowRight