mixin infocard4(text, addText1, addText2, imgSrc)
	.info-card
		.info-card__img
			img(src="img/resources/"+imgSrc +".jpg", width="256" alt="img")
			.blure-block
				img(src="img/resources/"+imgSrc +".jpg", width="256" alt="img")
		.info-card__body
			.info-card__badge
				span Amsterdam
			.marked-text !{text}
		.info-card__footer
			a(href="#!").button-white
				span Learn more
				span
					+sliderArrowRight
section.section--black.top-block
	.progress-bar.progress-bar--left
	.container.container--p0
		.section-content
			+titleGroup('The latest from the trade', 'Weâ€™re on top of it')
			.infocard-block.infocard-block--right.infocard-block--reverse.infocard-block--purple
				.infocard-block__content#topBlock-cards
					.infocard-block__row
						+infocard4('title', 'Today', '7 min. read', 5)
						+infocard4('title', '1 Day ago', '6 min. read', 6)
						+infocard4('title', '2 Days ago', '5 min. read', 7)
				.btn-showCards
					a(href="#topBlock-cards").button-white.light-button show all (12)
