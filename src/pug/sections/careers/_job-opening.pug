mixin vacanceCard(title)
	.info-card2.vacancy-card
		.info-card__img
			img.main-img(src="img/careers/vacancy.jpg", width="256" alt="img")
			img.blur-img(src="img/careers/vacancy.jpg", width="256" alt="img")
		.info-card__body
			.info-card__badge
				span Amsterdam
			.marked-text !{title}
		.info-card__footer
			a(href="vacancy-page.html").button-white
				span Learn more
				span
					+sliderArrowRight

